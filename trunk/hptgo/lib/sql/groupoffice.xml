<?xml version="1.0" encoding="UTF-8"?>
<schema version="0.2">
	<table name="acl">
		<field name="acl_id" type="I" size="11">
			<NOTNULL/>
			<PRIMARY/>
			<DEFAULT value="0"/>
			<link table="acl_items" field="id"/>
		</field>
		<field name="user_id" type="I" size="11">
			<NOTNULL/>
			<PRIMARY/>
			<DEFAULT value="0"/>
			<link table="users" field="id"/>
		</field>
		<field name="group_id" type="I" size="11">
			<NOTNULL/>
			<PRIMARY/>
			<DEFAULT value="0"/>
			<link table="groups" field="id"/>
		</field>
		<descr>
			ACL means Access Control List. It is a set of users related to an acl_id.
		</descr>
	</table>
	<table name="acl_items">
		<field name="id" type="I" size="11">
			<NOTNULL/>
			<PRIMARY/>
			<DEFAULT value="0"/>
		</field>
		<field name="user_id" type="I" size="11">
			<NOTNULL/>
			<DEFAULT value="0"/>
			<link table="users" field="id"/>
		</field>
		<field name="description" type="C" size="50">
			<NOTNULL/>
			<DEFAULT value=""/>
		</field>
		<descr>Description of an ACL</descr>
	</table>
	<table name="db_sequence">
		<field name="seq_name" type="C" size="20">
			<NOTNULL/>
			<PRIMARY/>
			<DEFAULT value=""/>
			<descr>sequence name</descr>
		</field>
		<field name="nextid" type="I" size="11">
			<NOTNULL/>
			<DEFAULT value="0"/>
		</field>
		<descr>This table is sequence emulation.</descr>
	</table>
	<table name="filetypes">
